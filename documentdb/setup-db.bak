#!/bin/bash
wait_time=15s

# wait for SQL Server to come up
echo 'importing data will start in $wait_time...'
sleep $wait_time
echo 'importing data...'

echo 'connecting...'
mongo admin -u root -p 'example'
echo 'connected...'

echo 'executing init.js'
mongo  127.0.0.1:27017/ordersDb init.js
echo 'database has been created'

echo 'done seeding db...'